[Unit]
Description=svxlink repeater remote RX/TX software
Documentation="man:renotetrx(1)"
Requires=svxlink_gpio_setup.service
After=network.target remote-fs.target time.target sound.target svxlink_gpio_setup.service

[Service]
Type=simple
User=svxlink
Group=daemon
EnvironmentFile=-/etc/default/remotetrx
Environment=CFGFILE=/etc/svxlink/remotetrx.conf
RuntimeDirectory=svxlink
ExecStart=/usr/bin/remotetrx --config $CFGFILE --logfile /var/log/remotetrx --pidfile /run/svxlink/remotetrx.pid
ExecReload=/bin/kill -s HUP $MAINPID
Restart=on-failure
TimeoutStartSec=60

[Install]
WantedBy=multi-user.target
